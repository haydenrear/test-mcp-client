<configuration>
    <appender name="MCP_CLIENT" class="ch.qos.logback.core.FileAppender">
        <file>test-mcp-client.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="MCP_CLIENT" />
    </root>
</configuration>